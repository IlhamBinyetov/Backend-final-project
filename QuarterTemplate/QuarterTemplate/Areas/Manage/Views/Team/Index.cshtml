@model List<Team>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Teams</h1>
        <a asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Order</th>
                <th scope="col">Name</th>
                <th scope="col">Product</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@team.Order</td>
                    <td>@team.Name</td>
                    <td>@team.Products.Count </td>
                    

                    <td><img src="~/uploads/teams/@team.Image" style="max-width:100px" alt="Alternate Text" /></td>
                    <td>
                        <a asp-action="edit" asp-route-id="@team.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="deletefetch" asp-route-id="@team.Id" class="btn btn-danger btn-item-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


