@model List<FavoriteViewModel>

@{ 

    Layout = null;
    double TotalCount = 0;
    foreach (var item in Model)
    {
        TotalCount += item.Price * item.Count;
    }

}


        <div class="ltn__utilize-menu-inner ltn__scrollbar ">
            <div class="ltn__utilize-menu-head">
                <span class="ltn__utilize-menu-title">Cart</span>
                <button class="ltn__utilize-close">×</button>
            </div>
            <div class="mini-cart-product-area ltn__scrollbar " id="favorite" data-favorite-count="@Model.Count">
                @foreach (var item in Model)
                {
                    <div class="mini-cart-item clearfix">
                        <div class="mini-cart-img">
                            <a href="#"><img src="~/uploads/products/@item.Image" alt="Image"></a>
                            <a class="deleteFav" data-id="@item.ProductId" asp-action="deletefavorites" asp-controller="product" asp-route-id="@item.ProductId">
                                <span class="mini-cart-item-delete"><i class="icon-cancel"></i></span>
                            </a>
                        </div>
                        <div class="mini-cart-info">
                            <h6><a href="#">@item.Name</a></h6>
                            <span class="mini-cart-quantity">@item.Price</span>
                        </div>
                    </div>

                }

            </div>
            <div class="mini-cart-footer">
                <div class="mini-cart-sub-total">
                    <h5>=Total: <span>$@TotalCount</span></h5>
                </div>
            </div>

        </div>
  



